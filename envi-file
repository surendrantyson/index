        $(function() {
            $(window).scroll(function() {
                if($(this).scrollTop() != 0) {
                    $('.topbutton').fadeIn();	
                } else {
                    $('.topbutton').fadeOut();
                }
            });
         
            $('.topbutton').click(function() {
                $('body,html').animate({scrollTop:0},800);
            });	
        });
        </script>  
