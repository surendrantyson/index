trigger:
  branches:
    include:
      - main

schedules:
- cron: "0 0 * * *"  # Runs at midnight every day
  displayName: Daily Midnight Run
  branches:
    include:
      - main

pool:
  vmImage: 'ubuntu-latest'

steps:
- script: echo "This is a cron job scheduled to run daily at midnight."
  displayName: 'Run Daily Job'
